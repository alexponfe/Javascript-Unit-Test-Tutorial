{
    "name": "JavascriptUnitTestTutorial",
    "version": "1.0.0",
    "description": "This is a tutorial for JS unit test.",
    "main": "index.js",
    "scripts": {
        "build": "webpack --config webpack.prod.config.js",
        "dev": "webpack --config webpack.dev.config.js",
        "dev:server": "webpack-dev-server --config webpack.dev.config.js --hot --open",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "css:lint": "stylelint src/**/*.css --config stylelint-config-standard",
        "test": "mocha --require @babel/register src/**/*test.js",
        "test:watch": "mocha --require @babel/register --watch src/**/*test.js",
        "test:chrome": "karma start karma.conf.js",
        "test:debug": "webpack-dev-server --config webpack.test.config.js --hot --open",
        "test:html": "webpack --config webpack.test.config.js"
    },
    "keywords": [
        "webpack",
        "babel",
        "mocha",
        "chai",
        "sinon",
        "handlebars",
        "karma",
        "eslint"
    ],
    "author": "Alejandro Pérez Álvarez",
    "repository": {
        "type": "git",
        "url": "https://github.com/alexponfe/Javascript-Unit-Test-Tutorial"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/alexponfe/Javascript-Unit-Test-Tutorial/issues"
    },
