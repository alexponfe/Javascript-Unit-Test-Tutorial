        "karma-mocha-reporter": "^2.2.5",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-tap": "^4.1.4",
        "karma-webpack": "^3.0.5",
        "lodash": "^4.17.11",
        "mocha-loader": "^2.0.0",
        "mocha-webpack": "^1.1.0",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "properties": "^1.2.1",
        "sass-loader": "^7.1.0",
        "sinon": "^7.2.2",
        "style-loader": "^0.23.1",
        "stylelint": "^9.9.0",
        "stylelint-config-standard": "^18.2.0",
