{
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "overrides": [
    {
      "files": [ "src/**/*.js" ]
    }
  ]
}